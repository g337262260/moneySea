<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/login_bg"
    tools:context="swaggy.com.moneysea.login.LoginActivity">
    <TextView
        android:id="@+id/login_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="账号登录"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="21dp"
        android:textColor="@color/white"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_gravity="center_horizontal"
                android:src="@color/white"
                android:layout_marginTop="70dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="51dp"
                android:layout_marginRight="51dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="手机号"
                    android:textSize="12sp" />
                <EditText
                    android:id="@+id/login_edit_phone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:drawablePadding="15dp"
                    android:paddingLeft="15dp"
                    android:background="@null"
                    android:paddingRight="15dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textCursorDrawable="@null"
                    android:textSize="12sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="51dp"
                android:layout_marginRight="51dp"
                android:background="#80b5b5b5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="51dp"
                android:layout_marginRight="51dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="密码"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/login_edit_password"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:drawablePadding="15dp"
                    android:paddingLeft="15dp"
                    android:background="@null"
                    android:inputType=""
                    android:paddingRight="15dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textCursorDrawable="@null"
                    android:textSize="12sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="51dp"
                android:layout_marginRight="51dp"
                android:background="#80b5b5b5"/>
            <TextView
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_marginLeft="51dp"
                android:layout_marginRight="51dp"
                android:layout_height="37dp"
                android:layout_marginTop="26dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_login_shape"
                android:text="登录"/>

            <TextView
                android:id="@+id/login_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码?"
                android:padding="5dp"
                android:layout_marginTop="9dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#ff5959"
                android:textSize="10sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="100dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"
                    android:background="#91959595"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快速登录"
                    android:textColor="#91ffffff"
                    android:textSize="12sp"
                    android:layout_gravity="center_horizontal" />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"
                    android:background="#91959595"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/login_phone"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@mipmap/phone"
                android:layout_marginTop="13dp"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
