<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_bg"
    tools:context="swaggy.com.moneysea.CreditActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@mipmap/mine_bg">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            >
            <ImageView
                android:id="@+id/credit_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@mipmap/back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:visibility="gone"
                android:text="关于我们"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/check_code_color"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="可用额度（元）"
            android:textColor="@color/white"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/credit_lines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_marginTop="14dp"/>

        <View
            android:layout_width="102dp"
            android:layout_height="2dp"
            android:background="#80fcf7f7"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal"
            android:background="#33ffffff"
            android:layout_marginTop="48dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日费利率（%）"
                    android:layout_marginTop="17dp"
                    android:textColor="@color/white"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/credit_interest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="13dp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="17dp"
                    android:textSize="15sp"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@color/white"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="借贷时间"
                    android:layout_marginTop="17dp"
                    android:textColor="@color/white"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/credit_back_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="13dp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="17dp"
                    android:textSize="15sp"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@color/white"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="还款方式"
                    android:layout_marginTop="17dp"
                    android:textColor="@color/white"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/credit_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="13dp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="17dp"
                    android:textSize="15sp"/>
            </LinearLayout>

        </LinearLayout>
        
    </LinearLayout>
    
    <TextView
        android:id="@+id/credit_commit"
        android:layout_width="273dp"
        android:layout_height="37dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="79dp"
        android:text="确认借贷"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:background="@mipmap/button_success"/>
</LinearLayout>
