<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical"
    tools:context="swaggy.com.moneysea.about.AboutUsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@mipmap/mine_bg">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            >
            <ImageView
                android:id="@+id/about_us_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@mipmap/back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:text="关于我们"/>
        </RelativeLayout>
    </RelativeLayout>


    <ImageView
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/logo"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="19dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <TextView
            android:id="@+id/about_us_version"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:textColor="@color/font_color"
            android:textStyle="bold"
            android:paddingLeft="28dp"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/about_us_tel"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:textColor="@color/font_color"
            android:textStyle="bold"
            android:paddingLeft="28dp"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/about_us_qq"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:textColor="@color/font_color"
            android:textStyle="bold"
            android:paddingLeft="28dp"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/about_us_wechat"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:textColor="@color/font_color"
            android:textStyle="bold"
            android:paddingLeft="28dp"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/about_us_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/font_color"
            android:textStyle="bold"
            android:paddingLeft="28dp"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>
