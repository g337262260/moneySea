<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="swaggy.com.moneysea.login.ChangePwdActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@mipmap/mine_bg">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            >
            <ImageView
                android:id="@+id/change_pwd_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@mipmap/back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="修改密码"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="51dp"
        android:layout_marginRight="51dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/font_color"
            android:text="手机号"
            android:textSize="12sp" />
        <EditText
            android:id="@+id/change_pwd_phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawablePadding="15dp"
            android:paddingLeft="15dp"
            android:background="@null"
            android:paddingRight="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/change_pwd_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textSize="12sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@drawable/check_code_shape"
            android:textColor="@color/white"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="51dp"
        android:layout_marginRight="51dp"
        android:background="#80b5b5b5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="51dp"
        android:layout_marginRight="51dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="验证码"
            android:textColor="@color/font_color2"
            android:textSize="12sp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/change_pwd_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawablePadding="15dp"
            android:paddingLeft="15dp"
            android:background="@null"
            android:inputType="number"
            android:paddingRight="15dp"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="15sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="51dp"
        android:layout_marginRight="51dp"
        android:background="#80b5b5b5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="51dp"
        android:layout_marginRight="51dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/font_color2"
            android:text="新密码"
            android:textSize="12sp" />
        <EditText
            android:id="@+id/change_pwd_new"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawablePadding="15dp"
            android:paddingLeft="15dp"
            android:background="@null"
            android:paddingRight="15dp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="15sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="51dp"
        android:layout_marginRight="51dp"
        android:background="#80b5b5b5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="51dp"
        android:layout_marginRight="51dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="再次输入"
            android:textColor="@color/font_color2"
            android:textSize="12sp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/change_pwd_again"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawablePadding="15dp"
            android:paddingLeft="15dp"
            android:background="@null"
            android:inputType="textPassword"
            android:paddingRight="15dp"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="15sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="51dp"
        android:layout_marginRight="51dp"
        android:background="#80b5b5b5"/>
    <TextView
        android:id="@+id/change_pwd_button"
        android:layout_width="match_parent"
        android:layout_marginLeft="51dp"
        android:layout_marginRight="51dp"
        android:layout_height="37dp"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/button_success"
        android:text="确认修改"/>
</LinearLayout>
